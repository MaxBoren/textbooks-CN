        li: a(href="/course/functions" target="") functions
        li: a(href="/course/graphs-and-networks" target="") graphs-and-networks
        li: a(href="/course/non-euclidean-geometry" target="") non-euclidean-geometry
        li: a(href="/course/polygons-and-polyhedra" target="") polygons-and-polyhedra
        li: a(href="/course/probability" target="") probability
        li: a(href="/course/quadratics" target="") quadratics
        li: a(href="/course/sequences" target="") sequences
        li: a(href="/course/transformations-and-symmetry" target="") transformations-and-symmetry
