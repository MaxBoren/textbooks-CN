parserOptions:
  ecmaVersion: 2017
  sourceType: module

env:
  es6: true
  browser: true
  node: true

extends:
  "eslint:recommended"

rules:
  no-unused-vars:
    - 1
    - argsIgnorePattern: ^_
  no-var: 2
  no-unneeded-ternary: 2
  eqeqeq:
    - 2
    - smart

  no-cond-assign: 0
  no-console: 0
  no-constant-condition: 0
  no-inner-declarations: 0
  no-useless-escape: 0
